  </select>
  <select id="selectUserVisitCount" resultType="java.lang.Integer" parameterType="java.lang.Object" >
    SELECT
        count(*)
    FROM
        `t_user_visit` t
    WHERE
        t.user_id = #{user_id}
    AND shop_id = #{shop_id}
