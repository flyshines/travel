<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="qingning.dbcommon.mybatis.persistence.ShopCustomerMapper" >
  
    <insert id="insertShopCustomer" parameterType="hashmap" >
        insert into t_shop_customer(shop_customer_id,user_id,shop_id,cost_money) VALUES(#{shop_customer_id},#{user_id},#{shop_id},#{cost_money})
    </insert>
    <update id="updateShopCustomer" parameterType="hashmap" >
        update t_shop_customer set cost_money=cost_money+#{cost_money},cost_times=cost_times+1 where shop_id=#{shopId} and user_id=#{user_id}
    </update>
    <select id="findShopCustomerByShopIdUserId" resultType="hashmap" parameterType="java.lang.String" >
        select * from t_shop_customer where shop_id = #{shopId} and user_id=#{userId}
    </select>
</mapper>