<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="qingning.dbcommon.mybatis.persistence.DistributerMapper" >
  <update id="updateUserDistributerInfo" parameterType="hashmap" >
    update t_distributer
	<set>
	    <if test="rq_card_address != null" >
        	rq_card_address=#{rq_card_address},
      	</if>
	</set>
    where user_id = #{user_id}
  </update>


  <select id="findDistributerByTutorId" resultType="hashmap" parameterType="hashmap" >
   select t_user.nick_name,t_distributer.offer_money,t_distributer.create_time,t_distributer.position from t_distributer LEFT JOIN t_user on t_distributer.user_id=t_user.user_id where tutor_id=#{user_id}
   <if test="position != null and position > 0">
		and t_distributer.position <![CDATA[ < ]]> #{position} 
 	</if>
  	order by t_distributer.position desc limit #{page_count}
  </select>

  <select id="findDistributerByUserId" resultType="hashmap" parameterType="java.lang.String" >
   	select * from t_distributer where user_id=#{userId}
  </select>

  <select id="findDistributerByInviteCode" resultType="hashmap" parameterType="java.lang.String" >
   	select * from t_distributer where invite_code=#{inviteCode}
  </select>
</mapper>