<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
       default-lazy-init="false">

    <!-- 启用注解 -->
    <context:annotation-config/>
    <context:component-scan base-package="qingning.user.common.db.server.imp"/>
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <context:property-placeholder location="classpath:application.properties"/>
    <!-- Application name -->
    <dubbo:application name="server-user-common-dao"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${zookeeper.address}"/>
    <!-- 用dubbo协议在zookeeper.common.rpc.port端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${zookeeper.user.common.dao.rpc.port}"/>
    <dubbo:service interface="qingning.server.rpc.manager.IUserCommonModuleServer" ref="userCommonModuleServer"
                   timeout="1200000" delay="-1" retries="0"/>
    <bean id="userCommonModuleServer" class="qingning.user.common.db.server.imp.UserCommonModuleServerImpl"/>
    <import resource="classpath:db-config.xml"/>
</beans>


